rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Secure entries collection: only allow authenticated users to create their own entries
    match /entries/{entryId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow access to the test collection for connectivity testing
    match /testCollection/{document} {
      allow read, write: if true;
    }
    
    // Default rule for other collections
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 19);
    }
  }
}
