rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to dive sites
    match /diveSites/{siteId} {
      allow read: if true;
      allow write: if true; // For MVP - allow all writes
    }
    
    // Future rules for authenticated users
    // Uncomment when adding authentication
    // match /diveSites/{siteId} {
    //   allow read: if true;
    //   allow write: if request.auth != null;
    // }
  }
}